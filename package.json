{
  "name": "try-elysia",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "prepare": "simple-git-hooks",
    "lint": "oxlint . && oxfmt --check .",
    "fmt": "oxfmt .",
    "lint:fix": "oxlint . --fix && oxfmt .",
    "typecheck": "tsgo --noEmit",
    "action:up": "actions-up",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:seed": "bun ./src/db/seed.ts",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "deploy": "wrangler deploy --minify",
    "dev": "bun run --watch src/runtime/bun.ts",
    "dev:node": "tsx watch src/runtime/node.ts",
    "dev:workerd": "wrangler dev src/runtime/workerd.ts",
    "dev:edge": "bun run --watch src/runtime/edge.ts",
    "build:node": "tsx build src/runtime/node.ts",
    "build:bun": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server src/runtime/bun.ts"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.4.3",
    "@elysiajs/eden": "^1.4.8",
    "@elysiajs/node": "^1.4.5",
    "@elysiajs/openapi": "^1.4.14",
    "@elysiajs/opentelemetry": "^1.4.10",
    "@elysiajs/server-timing": "^1.4.0",
    "@elysiajs/static": "^1.4.7",
    "@libsql/client": "^0.17.0",
    "@lukeed/uuid": "^2.0.1",
    "@node-rs/argon2": "^2.0.2",
    "@tanstack/react-query": "^5.90.21",
    "better-auth": "^1.4.18",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.25",
    "elysia-ip": "^1.0.10",
    "elysia-rate-limit": "^4.5.0",
    "elysiajs-helmet": "^1.0.4",
    "fast-escape-html": "^1.1.0",
    "non-error": "^0.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-error-boundary": "^6.1.1",
    "std-env": "^3.10.0",
    "strip-ansi": "^7.1.2",
    "tailwindcss": "^4.1.18",
    "tslog": "^4.10.2"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20260207.1",
    "actions-up": "^1.12.0",
    "bun-plugin-tailwind": "^0.1.2",
    "bun-types": "^1.3.9",
    "drizzle-kit": "^0.31.9",
    "drizzle-seed": "^0.3.1",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.48.0",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.21.0",
    "wrangler": "^4.65.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bun install --ignore-scripts --offline && bun run lint && bun run typecheck && bun run action:up"
  }
}
