{
  "name": "try-elysia",
  "version": "0.0.0",
  "scripts": {
    "lint": "oxlint . && oxfmt --check .",
    "fmt": "oxfmt .",
    "lint:fix": "oxlint . --fix && oxfmt .",
    "typecheck": "tsgo --noEmit",
    "deploy": "wrangler deploy --minify",
    "dev": "bun run --watch src/runtime/bun.ts",
    "dev:node": "tsx watch src/runtime/node.ts",
    "dev:workerd": "wrangler dev src/runtime/workerd.ts",
    "build:node": "tsx build src/runtime/node.ts",
    "build:bun": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server src/runtime/bun.ts"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.4.3",
    "@elysiajs/eden": "^1.4.8",
    "@elysiajs/node": "^1.4.4",
    "@elysiajs/openapi": "^1.4.14",
    "@elysiajs/opentelemetry": "^1.4.10",
    "@elysiajs/server-timing": "^1.4.0",
    "@elysiajs/static": "^1.4.7",
    "elysia": "^1.4.23",
    "environment": "^1.1.0",
    "fast-escape-html": "^1.1.0",
    "nanoid": "^5.1.6",
    "non-error": "^0.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "std-env": "^3.10.0",
    "strip-ansi": "^7.1.2",
    "tailwindcss": "^4.1.18",
    "tslog": "^4.10.2"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20260207.1",
    "bun-plugin-tailwind": "^0.1.2",
    "bun-types": "^1.3.9",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.21.0",
    "wrangler": "^4.63.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bun install --ignore-scripts --offline && bun run lint && bun run typecheck"
  }
}
